{
  "name": "error-receiver",
  "description": "Simple Node server that can receives exceptions sent by crash handlers (like Sentry, Raygun)",
  "main": "src/error-receiver.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "test": "mocha src/**/*-spec.js",
    "lint": "eslint index.js src/**/*.js",
    "issues": "git-issues",
    "commit": "git-issues && commit-wizard",
    "watch": "nodemon",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "e2e": "parallelshell 'node index.js' 'node test-page/end-to-end-spec.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/error-receiver.git"
  },
  "keywords": [
    "error",
    "crash",
    "reporter",
    "handler",
    "server",
    "api",
    "sentry",
    "raygun"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/error-receiver/issues"
  },
  "homepage": "https://github.com/bahmutov/error-receiver#readme",
  "config": {
    "pre-git": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": [
        "npm run lint",
        "npm test"
      ],
      "pre-push": [],
      "post-commit": [],
      "post-merge": []
    }
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "devDependencies": {
    "eslint": "1.9.0",
    "git-issues": "1.1.0",
    "mocha": "2.3.4",
    "nodemon": "1.8.1",
    "parallelshell": "2.0.0",
    "pre-git": "1.2.11",
    "request-promise": "1.0.2",
    "semantic-release": "^4.3.5"
  },
  "dependencies": {
    "body-parser": "1.14.1",
    "check-more-types": "2.1.2",
    "debug": "2.2.0",
    "lazy-ass": "1.0.0",
    "lodash": "3.10.1",
    "nconf": "0.8.2"
  }
}
