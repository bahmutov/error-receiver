{
  "name": "error-receiver",
  "description": "Simple Node server that can receives exceptions sent by crash handlers (like Sentry, Raygun)",
  "main": "index.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "test": "eslint index.js src/**/*.js",
    "issues": "git-issues",
    "commit": "git-issues && commit-wizard",
    "watch": "nodemon",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/error-receiver.git"
  },
  "keywords": [
    "error",
    "crash",
    "reporter",
    "handler",
    "server",
    "api",
    "sentry",
    "raygun"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/error-receiver/issues"
  },
  "homepage": "https://github.com/bahmutov/error-receiver#readme",
  "config": {
    "pre-git": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": [
        "npm test"
      ],
      "pre-push": [],
      "post-commit": [],
      "post-merge": []
    }
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "devDependencies": {
    "eslint": "1.9.0",
    "git-issues": "1.1.0",
    "nodemon": "1.8.1",
    "pre-git": "1.2.11",
    "semantic-release": "^4.3.5"
  },
  "dependencies": {
    "body-parser": "1.14.1",
    "debug": "2.2.0",
    "lodash": "3.10.1",
    "nconf": "0.8.2"
  }
}
